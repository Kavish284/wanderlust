<% layout("/layouts/boilerplate") %> <%= success %>
<body>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listing Filters</title>
    <style>
        .filters {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            background-color: #f8f9fa; /* Light gray background */
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
        }

        .filter {
            flex: 1;
            text-align: center;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .filter i {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div id="filters" class="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            Trending
        </div>
        <div class="filter">
            <i class="fa-solid fa-heart"></i>
            Popular
        </div>
        <div class="filter">
            <i class="fa-solid fa-star"></i>
            Top Rated
        </div>
        <div class="filter">
            <i class="fa-solid fa-globe"></i>
            Global
        </div>
        <div class="filter">
            <i class="fa-solid fa-map-marker"></i>
            Local
        </div>
        <div class="filter">
            <i class="fa-solid fa-hiking"></i>
            Adventure
        </div>
        <div class="filter">
            <i class="fa-solid fa-beach-umbrella"></i>
            Beach
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            Mountain
        </div>
        <div class="filter">
            <i class="fa-solid fa-city"></i>
            City
        </div>
        <div class="filter">
            <i class="fa-solid fa-home"></i>
            Homey
        </div>
    </div>
</body>
</html>

    
    <div class="row" mt-3>
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="col-xl-3 col-lg-4 col-md-6 col-sm-12 listing-link">
                <div class="card" style="width: 100%;">
                    <% if (listing.image.url) { %>
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %> Image" style="height: 20rem; object-fit: cover;">
                    <% } else { %>
                        <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %> Image" style="height: 20rem; object-fit: cover;">
                    <% } %>
                    <div class="card-body">
                        <p class="card-title"><b><%= listing.title %></b></p>
                        <p class="card-price">&#36;<%= listing.price %>/night</p>
                        
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
