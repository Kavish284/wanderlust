<% layout("/layouts/boilerplate") %>
<%= success %>

<body>
    
    <style>
        .filters {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            background-color: #f8f9fa;
            /* Light gray background */
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            /* Soft shadow effect */
        }

        .filter {
            flex: 1;
            text-align: center;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .filter i {
            margin-bottom: 5px;
        }
    </style>

    <div class="filters">
        <!-- Category filters with Font Awesome icons -->
        <div class="filter">
            <a href="/listings/category/Beach">
                <i class="fas fa-umbrella-beach"></i>
                Beach
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Mountain">
                <i class="fas fa-mountain"></i>
                Mountain
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/City">
                <i class="fas fa-city"></i>
                City
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Cabin">
                <i class="fas fa-home"></i>
                Cabin
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Villa">
                <i class="fas fa-star"></i>
                Villa
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Loft">
                <i class="fas fa-building"></i>
                Loft
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Cottage">
                <i class="fas fa-house"></i>
                Cottage
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Chalet">
                <i class="fas fa-hiking"></i>
                Chalet
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Hotels">
                <i class="fas fa-bed"></i>
                Hotels
            </a>
        </div>
    </div>

    <div class="row mt-3">
        <% if (allListings.length === 0) { %>
            <p>No listings available.</p>
        <% } else { %>
            <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="col-xl-3 col-lg-4 col-md-6 col-sm-12 listing-link">
                <div class="card" style="width: 100%;">
                    <% if (listing.image.url) { %>
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %> Image" style="height: 20rem; object-fit: cover;">
                    <% } else { %>
                        <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %> Image" style="height: 20rem; object-fit: cover;">
                    <% } %>
                    <div class="card-body">
                        <p class="card-title"><b><%= listing.title %></b></p>
                        <p class="card-price">&#36;<%= listing.price %>/night</p>
                    </div>
                </div>
            </a>
            <% } %>
        <% } %>
    </div>
</body>
